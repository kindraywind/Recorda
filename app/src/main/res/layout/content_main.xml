<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.octtoplus.proj.recorda.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/helloLabel"
                android:text="Hello World!"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/byeLabel"
                android:text="Byeeeeeeeeeeee!"
                android:layout_below="@+id/helloLabel"
                android:textSize="40dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/heheButton"
                android:text="hehehehe"
                android:textSize="40dp"
                android:layout_below="@+id/byeLabel" />
            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/checky1CheckBox"
                android:text="checky1"
                android:textSize="50dp"
                android:checked="false"
                android:layout_below="@+id/heheButton"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bye2Label"
                android:text="Byeeeeeeeeeeee!"
                android:layout_below="@+id/checky1CheckBox"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bye3Label"
                android:text="Byeeeeeeeeeeee!"
                android:layout_below="@+id/bye2Label"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bye4Label"
                android:text="Byeeeeeeeeeeee!"
                android:layout_below="@+id/bye3Label"
                android:textSize="40dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bye5Label"
                android:text="Byeeeeeeeeeeee!"
                android:layout_below="@+id/bye4Label"
                android:textSize="40dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/huhuButton"
                android:text="huhuhu"
                android:textSize="40dp"
                android:layout_below="@+id/bye5Label" />
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/hohoButton"
                android:text="hohohoho"
                android:textSize="40dp"
                android:layout_below="@+id/huhuButton" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ahaLabel"
                android:text="AHA"
                android:textSize="50dp"
                android:layout_below="@+id/hohoButton"/>



        </RelativeLayout>


    </ScrollView>


</RelativeLayout>
